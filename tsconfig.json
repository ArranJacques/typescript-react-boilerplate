{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}